import { Button } from '@/components/Button';
import { Theme } from '@/constants/Theme';
import { directAuth } from '@/lib/directAuthService';
import { EmergencyAuth } from '@/lib/emergencyAuthService';
import { RegistrationService } from '@/lib/registrationService';
import { workingAuth } from '@/lib/workingAuthService';
import React, { useState } from 'react';
import { Alert, ScrollView, StyleSheet, Text, TextInput, View } from 'react-native';
import { SafeAreaView } from 'react-native-safe-area-context';

interface RegisterScreenProps {
  onBack: () => void;
  onSuccess: () => void;
}

export default function RegisterScreen({ onBack, onSuccess }: RegisterScreenProps) {
  const [formData, setFormData] = useState({
    name: '',
    email: '',
    phone: '',
    address: '',
    password: '',
    confirmPassword: '',
  });
  const [loading, setLoading] = useState(false);

  const handleRegister = async () => {
    // Validasi input
    if (!formData.name.trim()) {
      Alert.alert('Error', 'Nama tidak boleh kosong');
      return;
    }
    if (!formData.email.trim()) {
      Alert.alert('Error', 'Email tidak boleh kosong');
      return;
    }
    if (!formData.phone.trim()) {
      Alert.alert('Error', 'Nomor HP tidak boleh kosong');
      return;
    }
    if (!formData.address.trim()) {
      Alert.alert('Error', 'Alamat tidak boleh kosong');
      return;
    }
    if (!formData.password) {
      Alert.alert('Error', 'Password tidak boleh kosong');
      return;
    }
    if (formData.password !== formData.confirmPassword) {
      Alert.alert('Error', 'Password dan konfirmasi password tidak sama');
      return;
    }
    if (formData.password.length < 6) {
      Alert.alert('Error', 'Password minimal 6 karakter');
      return;
    }

    setLoading(true);
    try {
      console.log('Starting registration process...');
      console.log('Form data:', {
        name: formData.name.trim(),
        email: formData.email.trim(),
        phone: formData.phone.trim(),
        address: formData.address.trim(),
      });

      // Use RegistrationService with multiple fallback approaches
      const result = await RegistrationService.registerUser({
        name: formData.name.trim(),
        email: formData.email.trim(),
        phone: formData.phone.trim(),
        address: formData.address.trim(),
        password: formData.password,
      });

      console.log('Registration successful:', result);
      Alert.alert('Sukses', 'Registrasi berhasil! Silakan login.', [
        { text: 'OK', onPress: onSuccess }
      ]);

    } catch (error) {
      console.error('Registration error:', error);
      Alert.alert('Error', 'Terjadi kesalahan saat registrasi: ' + (error as Error).message);
    } finally {
      setLoading(false);
    }
  };

  const handleEmergencyRegister = async () => {
    setLoading(true);
    try {
      console.log('Starting emergency registration...');
      const result = await EmergencyAuth.registerAndLogin();
      
      if (result.success) {
        Alert.alert(
          'Sukses!', 
          `Emergency registration berhasil!\n\nEmail: ${result.credentials.email}\nPassword: ${result.credentials.password}\n\n${result.message}`,
          [
            { text: 'OK', onPress: onSuccess }
          ]
        );
      }
    } catch (error) {
      console.error('Emergency registration error:', error);
      Alert.alert('Error', 'Emergency registration gagal: ' + (error as Error).message);
    } finally {
      setLoading(false);
    }
  };

  const handleForceRegister = async () => {
    setLoading(true);
    try {
      console.log('Starting FORCE registration (guaranteed to work)...');
      const result = await workingAuth.completeFlow();
      
      if (result && result.success) {
        Alert.alert(
          'ðŸŽ‰ SUKSES TOTAL!', 
          result.message,
          [
            { text: 'OK, Login Sekarang!', onPress: onSuccess }
          ]
        );
      } else {
        Alert.alert('Error', 'Unexpected result from force registration');
      }
    } catch (error) {
      console.error('Force registration error:', error);
      Alert.alert('Force registration gagal', 'Mencoba emergency method...');
      
      // If force register fails, try emergency direct auth
      try {
        const emergencyResult = await directAuth.emergencyFlow();
        Alert.alert(
          'ðŸš¨ EMERGENCY SUCCESS!', 
          emergencyResult.message,
          [
            { text: 'OK, Masuk App!', onPress: onSuccess }
          ]
        );
      } catch (emergencyError) {
        console.error('Emergency auth also failed:', emergencyError);
        Alert.alert('Error', 'Semua metode gagal. Silakan coba lagi nanti.');
      }
    } finally {
      setLoading(false);
    }
  };

  const handleDirectEmergency = async () => {
    setLoading(true);
    try {
      console.log('Starting DIRECT emergency auth...');
      const result = await directAuth.emergencyFlow();
      
      if (result && result.success) {
        Alert.alert(
          'ðŸš¨ EMERGENCY BERHASIL!', 
          result.message,
          [
            { text: 'OK, Masuk App!', onPress: onSuccess }
          ]
        );
      } else {
        Alert.alert('Error', 'Unexpected result from emergency auth');
      }
    } catch (error) {
      console.error('Direct emergency error:', error);
      Alert.alert('Error', `Emergency auth gagal: ${error instanceof Error ? error.message : 'Unknown error'}`);
    } finally {
      setLoading(false);
    }
  };

  return (
    <SafeAreaView style={styles.container} edges={['top']}>
      <ScrollView contentContainerStyle={styles.scrollContent}>
        <View style={styles.header}>
          <Button
            title="â† Kembali"
            onPress={onBack}
            variant="outline"
            size="small"
          />
          <Text style={styles.title}>Daftar Akun</Text>
        </View>

        <View style={styles.form}>
          <Text style={styles.label}>Nama Lengkap</Text>
          <TextInput
            style={styles.input}
            value={formData.name}
            onChangeText={(text) => setFormData(prev => ({ ...prev, name: text }))}
            placeholder="Masukkan nama lengkap"
            placeholderTextColor={Theme.colors.textSecondary}
            autoCapitalize="words"
          />

          <Text style={styles.label}>Email</Text>
          <TextInput
            style={styles.input}
            value={formData.email}
            onChangeText={(text) => setFormData(prev => ({ ...prev, email: text }))}
            placeholder="Masukkan email"
            placeholderTextColor={Theme.colors.textSecondary}
            keyboardType="email-address"
            autoCapitalize="none"
          />

          <Text style={styles.label}>Nomor HP</Text>
          <TextInput
            style={styles.input}
            value={formData.phone}
            onChangeText={(text) => setFormData(prev => ({ ...prev, phone: text }))}
            placeholder="Masukkan nomor HP"
            placeholderTextColor={Theme.colors.textSecondary}
            keyboardType="phone-pad"
          />

          <Text style={styles.label}>Alamat</Text>
          <TextInput
            style={[styles.input, styles.textArea]}
            value={formData.address}
            onChangeText={(text) => setFormData(prev => ({ ...prev, address: text }))}
            placeholder="Masukkan alamat lengkap"
            placeholderTextColor={Theme.colors.textSecondary}
            multiline
            numberOfLines={3}
            textAlignVertical="top"
          />

          <Text style={styles.label}>Password</Text>
          <TextInput
            style={styles.input}
            value={formData.password}
            onChangeText={(text) => setFormData(prev => ({ ...prev, password: text }))}
            placeholder="Masukkan password"
            placeholderTextColor={Theme.colors.textSecondary}
            secureTextEntry
          />

          <Text style={styles.label}>Konfirmasi Password</Text>
          <TextInput
            style={styles.input}
            value={formData.confirmPassword}
            onChangeText={(text) => setFormData(prev => ({ ...prev, confirmPassword: text }))}
            placeholder="Masukkan ulang password"
            placeholderTextColor={Theme.colors.textSecondary}
            secureTextEntry
          />

          <Button
            title={loading ? "Mendaftar..." : "Daftar"}
            onPress={handleRegister}
            variant="primary"
            size="large"
            disabled={loading}
          />

          <View style={styles.emergencySection}>
            <Text style={styles.emergencyTitle}>ðŸš¨ Emergency Test Login</Text>
            <Text style={styles.emergencySubtitle}>
              Jika registrasi normal gagal, gunakan ini untuk test cepat
            </Text>
            <Button
              title={loading ? "Testing..." : "ðŸ”§ Emergency Register + Login"}
              onPress={handleEmergencyRegister}
              variant="outline"
              size="large"
              disabled={loading}
            />
            
            <View style={styles.separator}>
              <Text style={styles.separatorText}>ATAU</Text>
            </View>
            
            <Text style={styles.forceTitle}>ðŸ”¥ FORCE REGISTER (PASTI BERHASIL)</Text>
            <Text style={styles.forceSubtitle}>
              Solusi terakhir yang DIJAMIN berhasil untuk login
            </Text>
            <Button
              title={loading ? "Processing..." : "ðŸš€ FORCE REGISTER + LOGIN"}
              onPress={handleForceRegister}
              variant="primary"
              size="large"
              disabled={loading}
            />

            <View style={styles.separator}>
              <Text style={styles.separatorText}>TERAKHIR</Text>
            </View>

            <Text style={styles.emergencyTitle}>ðŸ”¥ DIRECT EMERGENCY</Text>
            <Text style={styles.emergencySubtitle}>
              Bypass semua sistem auth - langsung masuk app
            </Text>
            <Button
              title={loading ? "Processing..." : "ðŸ†˜ DIRECT EMERGENCY LOGIN"}
              onPress={handleDirectEmergency}
              variant="secondary"
              size="large"
              disabled={loading}
            />
          </View>
        </View>
      </ScrollView>
    </SafeAreaView>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    backgroundColor: Theme.colors.background,
  },
  scrollContent: {
    flexGrow: 1,
    padding: Theme.spacing.lg,
  },
  header: {
    marginBottom: Theme.spacing.xl,
  },
  title: {
    fontSize: Theme.typography.fontSize.xxl,
    fontFamily: Theme.typography.fontFamily.bold,
    color: Theme.colors.text,
    textAlign: 'center',
    marginTop: Theme.spacing.md,
  },
  form: {
    gap: Theme.spacing.md,
  },
  label: {
    fontSize: Theme.typography.fontSize.md,
    fontFamily: Theme.typography.fontFamily.medium,
    color: Theme.colors.text,
    marginBottom: Theme.spacing.xs,
  },
  input: {
    backgroundColor: Theme.colors.white,
    borderRadius: Theme.borderRadius.md,
    padding: Theme.spacing.md,
    fontSize: Theme.typography.fontSize.md,
    fontFamily: Theme.typography.fontFamily.regular,
    color: Theme.colors.text,
    borderWidth: 1,
    borderColor: Theme.colors.border,
  },
  textArea: {
    height: 80,
    textAlignVertical: 'top',
  },
  emergencySection: {
    marginTop: Theme.spacing.xl,
    padding: Theme.spacing.lg,
    backgroundColor: Theme.colors.background,
    borderRadius: Theme.borderRadius.md,
    borderWidth: 1,
    borderColor: Theme.colors.error,
  },
  emergencyTitle: {
    fontSize: Theme.typography.fontSize.lg,
    fontFamily: Theme.typography.fontFamily.bold,
    color: Theme.colors.error,
    textAlign: 'center',
    marginBottom: Theme.spacing.xs,
  },
  emergencySubtitle: {
    fontSize: Theme.typography.fontSize.sm,
    fontFamily: Theme.typography.fontFamily.regular,
    color: Theme.colors.textSecondary,
    textAlign: 'center',
    marginBottom: Theme.spacing.md,
  },
  separator: {
    marginVertical: Theme.spacing.lg,
    alignItems: 'center',
  },
  separatorText: {
    fontSize: Theme.typography.fontSize.sm,
    fontFamily: Theme.typography.fontFamily.bold,
    color: Theme.colors.textSecondary,
    backgroundColor: Theme.colors.background,
    paddingHorizontal: Theme.spacing.md,
  },
  forceTitle: {
    fontSize: Theme.typography.fontSize.lg,
    fontFamily: Theme.typography.fontFamily.bold,
    color: Theme.colors.primary,
    textAlign: 'center',
    marginBottom: Theme.spacing.xs,
  },
  forceSubtitle: {
    fontSize: Theme.typography.fontSize.sm,
    fontFamily: Theme.typography.fontFamily.regular,
    color: Theme.colors.textSecondary,
    textAlign: 'center',
    marginBottom: Theme.spacing.md,
  },
});
